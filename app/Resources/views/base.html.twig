<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}WorkGroup Project{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" type="text/css" media="screen">
            <style> body { padding-top: 60px; } </style>
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-responsive.min.css') }}" type="text/css" media="screen">
            <link rel="stylesheet" href="{{ asset('assets/css/smoothness/jquery-ui-1.9.0.custom.min.css') }}" type="text/css" media="screen">
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" type="text/css" media="screen">
        {% endblock %}
        <script type="text/javascript" src="{{ asset('assets/js/jquery-1.8.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/js/common.js') }}"></script>
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
              <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('wg_homepage') }}" title="{{ wg.name }}">WorkGroup</a>
                <div class="nav-collapse collapse">
                  <ul class="nav">
                    {% block menu %}
                        <li{% if getControllerName() == 'dashboard' and getActionName() == 'dashboard' %} class="active"{% endif %}>
                            <a href="{{ path('wg_homepage') }}">Accueil</a>
                        </li>
                        <li{% if getControllerName() == 'dashboard' and getActionName() == 'activities' %} class="active"{% endif %}>
                            <a href="{{ path('wg_activities') }}">Activités</a>
                        </li>
                        <li{% if getBundleName() == 'file' %} class="active"{% endif %}>
                            <a href="{{ path('wg_files') }}">Fichiers</a>
                        </li>
                        <li{% if getBundleName() == 'user' %} class="active"{% endif %}>
                            <a href="{{ path('fos_user_profile_show') }}">Mon profil</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                        </li>    
                    {% endblock %}
                  </ul>
                </div>
              </div>
            </div>
        </div>
        <div class="container" id="body">
            {#
            {{ getControllerName() }}
            {{ getActionName() }}
            {{ getBundleName() }}
            #}
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('assets/js/jquery-ui-1.9.0.custom.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% endblock %}  
    </body>
</html>
